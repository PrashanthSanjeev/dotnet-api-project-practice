@model IEnumerable<Details.Models.Person>
@{
    ViewBag.Title = "Persons";
}
<h2>@ViewBag.header</h2>

<table class=" table">

    <thead>

        <tr>

            <th>#</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Address</th>
            <th>Email</th>
            <th>Phone</th>
        </tr>
    </thead>

    <tbody>

        @foreach(Person person in Model)
        {
            
            <tr>
                <td>@person.Id</td>
                <td>@person.FirstName</td>
                <td>@person.LastName</td>
                <td>@person.Address</td>
                <td>@person.Email</td>
                <td>@person.PhoneNumber</td>

            </tr>

        }
    </tbody>

</table>